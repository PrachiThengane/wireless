<?xml version="1.0" encoding="UTF-8"?>
<config>
   <sections>
        <catalog>
            <groups>
                <aitmanufacturers translate="label" module="aitmanufacturers">
                    <label>Shop By Brands</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>99</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <manufacturers_url_prefix translate="label comment">
                            <label>URL Key</label>
                            <comment>eg: example.com/brands/</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_url_prefix>
                        <manufacturers_url_pattern translate="label comment">
                            <label>URL Pattern</label>
                            <comment>Note!: [Brand].html is used by default. [Brand] - is a mandatory part of pattern. Do not use special symbols in pattern else your brands pages won't be displayed. The pattern will be used in this way - SiteName.com/brands/pattern ex: SiteName.com/brands/mybrand.html</comment>
                            <frontend_type>text</frontend_type>
                            <backend_model>aitmanufacturers/config_rewrite</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_url_pattern>
                        <manufacturers_attribute_code translate="label comment">
                            <label>Attribute Code</label>
                            <comment>from 'Catalog > Attributes > Manage Attributes'</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_attribute_code>
                        <manufacturers_columns_num translate="label comment">
                            <label>Number of Columns</label>
                            <comment>At the 'All Brands' page</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_columns_num>
                        <manufacturers_brief_num translate="label comment">
                            <label>Number of Brands</label>
                            <comment>Number of brands in the sidebar block. Set 0 to display all</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_brief_num>
                        <manufacturers_show_brands_withproducts_only translate="label comment">
                            <label>Show Brands with Products Only</label>
                            <comment></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_show_brands_withproducts_only>
                        <manufacturers_show_categories_as_tree translate="label comment">
                            <label>Show Categories As Tree</label>
                            <comment></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_show_categories_as_tree>
                        <manufacturers_show_brands_from_category_only translate="label comment">
                            <label>Show Brands From Current Category</label>
                            <comment>If set to "Yes", only brands from the current category are displayed at the category view page.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_show_brands_from_category_only>
                        <manufacturers_show_logo translate="label comment">
                            <label>Show Logo</label>
                            <comment>Show brand logo on the product page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_show_logo>                                          
                        <manufacturers_show_link translate="label comment">
                            <label>Show Link</label>
                            <comment>Show Link 'See other products by Brand' on the product page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_show_link>
						<manufacturers_show_brands_in_sitemap translate="label comment">
                            <label>Show Brands In Site Map</label>
                            <comment>Show Page 'Brands sitemap' in the site map</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_show_brands_in_sitemap>
                        <manufacturers_show_brief_image translate="label comment">
                            <label>Show Brands Icons In Brands Brief Block</label>
                            <comment>If uploaded show small icon with every brand link in brands brief sidebar block</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_show_brief_image>
                        <manufacturers_show_list_image translate="label comment">
                            <label>Show Brands Icons On Brands List Page</label>
                            <comment>If uploaded show small icon with every brand link on brands list page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_show_list_image>
                        <manufacturers_rename_pic translate="label comment">
                            <label>Rename pics</label>
                            <comment>Rename uploaded pictures to brand id</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </manufacturers_rename_pic>
                    </fields>
                </aitmanufacturers>
            </groups>
        </catalog>
        <sitemap>
            <groups>
                <aitmanufacturers translate="label">
                    <label>Brand Pages Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <changefreq translate="label">
                            <label>Frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_frequency</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </changefreq>
                        <priority translate="label comment">
                            <label>Priority</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>adminhtml/system_config_backend_sitemap</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Valid values range: from 0.0 to 1.0.</comment>
                        </priority>
                    </fields>
                </aitmanufacturers>            
            </groups>
        </sitemap>
    </sections>
</config>
