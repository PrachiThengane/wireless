/* Brand Bar CSS */

.brandbar-shell {
	width: 1190px;
	height: 90px;
	margin: 20px 0 40px 0;
}

.brandbar-inner {
	width: 100%;
	position: relative;
	height: 90px;
	margin: 0 10px;
}

.brand-img-asus, .brand-img-toshiba, .brand-img-msi, .brand-img-samsung, .brand-img-htc, .brand-img-nokia,
.brand-img-sony, .brand-img-huawei, .brand-img-tplink, .brand-img-netgear, .brand-img-dlink, .brand-img-logitech,
.brand-img-creative, .brand-img-sennheiser, .brand-img-belkin, .brand-img-stm, .brand-img-microsoft, .brand-img-apple{
	width: 110px;
	height: 25px;
	float: left;
	margin: 10px 10px;
}

.brand-img-asus:hover, .brand-img-toshiba:hover, .brand-img-msi:hover, .brand-img-samsung:hover, .brand-img-htc:hover, .brand-img-nokia:hover,
.brand-img-sony:hover, .brand-img-huawei:hover, .brand-img-tplink:hover, .brand-img-netgear:hover, .brand-img-dlink:hover, .brand-img-logitech:hover,
.brand-img-creative:hover, .brand-img-sennheiser:hover, .brand-img-belkin:hover, .brand-img-stm:hover, .brand-img-microsoft:hover, .brand-img-apple:hover {
	opacity: 0.8 !important;
	filter: alpha(opacity=80) !important;
}

.brand-img-asus {background: url("/skin/frontend/default/w1lightinthebox/images/brands/brand-sprite.png") no-repeat scroll 0 0 transparent;}
